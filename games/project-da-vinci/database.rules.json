{
  "rules": {
    ".read": false,
    ".write": false,

    "waitingPlayers": {
      ".read": "auth != null",
      "$uid": {
        ".write": "auth != null && auth.uid == $uid"
      }
    },

    "gameRooms": {
      "$roomId": {
        ".read": "auth != null && data.child('players').child(auth.uid).exists()",
        ".write": "auth != null && data.child('players').child(auth.uid).exists()"
      }
    },

    "gameLogs": {
      ".read": "auth != null",
      "$logId": {
        ".write": false
      }
    }
  }
}
