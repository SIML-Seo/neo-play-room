{
  "rules": {
    ".read": false,
    ".write": false,

    "lobby": {
      "waitingPlayers": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },

    "gameRooms": {
      "$roomId": {
        ".read": "auth != null && (data.child('players').child(auth.uid).exists() || !data.exists())",
        ".write": "auth != null"
      }
    },

    "gameLogs": {
      ".read": "auth != null",
      "$logId": {
        ".write": false
      }
    }
  }
}
