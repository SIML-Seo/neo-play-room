{
  "rules": {
    ".read": false,
    ".write": false,

    "waitingPlayers": {
      ".read": "auth != null",
      "$uid": {
        ".write": "auth != null && auth.uid == $uid"
      }
    },

    "lobby": {
      "waitingPlayers": {
        ".read": "auth != null",
        "$uid": {
          ".write": "auth != null && auth.uid == $uid"
        }
      }
    },

    "gameRooms": {
      "$roomId": {
        ".read": "auth != null && data.child('players').child(auth.uid).exists()",
        ".write": "auth != null && (data.exists() ? data.child('players').child(auth.uid).exists() : root.child('lobby').child('waitingPlayers').child(auth.uid).exists())"
      }
    },

    "roomSecrets": {
      "$roomId": {
        ".read": "auth != null && root.child('gameRooms').child($roomId).child('currentTurn').val() == auth.uid",
        ".write": "auth != null && !data.exists() && root.child('gameRooms').child($roomId).child('players').child(auth.uid).exists()"
      }
    },

    "gameLogs": {
      ".read": "auth != null",
      "$logId": {
        ".write": false
      }
    }
  }
}
