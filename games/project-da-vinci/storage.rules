rules_version = '2';

// Cloud Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    // 게임 로그 이미지 (인증된 사용자만 읽기/쓰기)
    match /gameLogs/{roomId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // 테스트용: 모든 사용자 읽기 허용 (개발 환경)
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
